<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GaJaMap" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 타이틀바, 상태바 없애기 -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="SpinnerDivideStyle">
        <!--아이템을 나누는 선 색상-->
        <item name="android:divider">@color/spinner_gray</item>
        <!--선 높이-->
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/spinner_back</item>
        <item name="android:height">30dp</item>

    </style>
    <style name="SpinnerTheme" parent="Theme.AppCompat">
        <!--spinnerDivideStyle을 먼저 만들어 줘야한다.-->
        <item name="android:dropDownListViewStyle">@style/SpinnerDivideStyle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11sp</item>
    </style>

</resources>