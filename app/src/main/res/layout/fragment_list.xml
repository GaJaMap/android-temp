<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="fragment"
            type="com.example.gajamap.ui.fragment.customerList.ListFragment" />
        <variable
            name="viewModel"
            type="com.example.gajamap.viewmodel.ListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_list_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/fragment_list_tool"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragment_list_top_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back_btn"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_search"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="16.11dp"
                app:layout_constraintTop_toTopOf="@+id/fragment_list_top_tv"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_list_top_tv"
                app:layout_constraintStart_toEndOf="@+id/fragment_list_top_tv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_list_search"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/fragment_list_tool"
            android:elevation="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_list_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_search"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/fragment_list_search_purple"
                app:layout_constraintStart_toStartOf="@+id/fragment_list_search"
                app:layout_constraintTop_toTopOf="@+id/fragment_list_search"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_list_search">

                <Spinner
                    android:id="@+id/spinner_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/fragment_list_search_purple"
                    app:layout_constraintStart_toStartOf="@+id/cl_search"
                    app:layout_constraintTop_toTopOf="@+id/cl_search"
                    app:layout_constraintBottom_toBottomOf="@+id/cl_search"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_search_drop"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@+id/spinner_search"
                    app:layout_constraintEnd_toEndOf="@+id/cl_search"
                    app:layout_constraintTop_toTopOf="@+id/spinner_search"
                    app:layout_constraintBottom_toBottomOf="@+id/spinner_search"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/fragment_list_search_et_background"
                app:layout_constraintStart_toEndOf="@+id/cl_search"
                app:layout_constraintEnd_toEndOf="@+id/fragment_list_search"
                app:layout_constraintTop_toTopOf="@+id/fragment_list_search"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_list_search"
                android:textSize="13sp"
                android:fontFamily="@font/nanumsquareneo_regular"
                android:textColor="@color/black"
                android:paddingStart="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <TextView
            android:id="@+id/fragment_list_category1"
            android:layout_width="71dp"
            android:layout_height="26dp"
            android:text="@string/list_category1"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:background="@drawable/fragment_list_category_background"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="17dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_list_search"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/fragment_list_category2"
            android:layout_width="71dp"
            android:layout_height="26dp"
            android:text="@string/list_category2"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:background="@drawable/fragment_list_category_background"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_list_search"
            app:layout_constraintStart_toEndOf="@+id/fragment_list_category1"/>

        <TextView
            android:id="@+id/fragment_list_category3"
            android:layout_width="71dp"
            android:layout_height="26dp"
            android:text="@string/list_category3"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:background="@drawable/fragment_list_category_background"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_list_search"
            app:layout_constraintStart_toEndOf="@+id/fragment_list_category2"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:nestedScrollingEnabled="false"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            tools:listitem="@layout/item_list"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_list_category1"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>