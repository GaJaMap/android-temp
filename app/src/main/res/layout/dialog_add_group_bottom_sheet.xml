<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BottomSheetTheme"
    android:background="@drawable/fragment_add_bottom_background"
    android:paddingBottom="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_addgroup_address"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_address"
        app:layout_constraintEnd_toStartOf="@id/tv_addgroup_main"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_addgroup_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/list_search_tv"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:fontFamily="@font/nanumsquareneo_bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_addgroup_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_addgroup_address"
        app:layout_constraintTop_toTopOf="@id/iv_addgroup_address" />

    <LinearLayout
        android:id="@+id/ll_addgroup"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_addgroup_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/line"/>

    <TextView
        android:id="@+id/tv_addgroup_inform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/inform"
        android:layout_marginTop="8dp"
        android:text="@string/addgroup_inform"
        android:textAlignment="center"
        android:textSize="14sp"
        android:fontFamily="@font/nanumsquareneo_regular"
        android:textColor="@color/black"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/ll_addgroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_addgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_addgroup_inform">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_group_total"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/group_total"
            android:background="@drawable/bg_grouplist_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_group_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addgroup_total"
            android:fontFamily="@font/nanumsquareneo_bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/iv_group_total"
            app:layout_constraintTop_toTopOf="@id/iv_group_total"
            app:layout_constraintBottom_toBottomOf="@id/iv_group_total"/>

        <TextView
            android:id="@+id/tv_start_parenthesis_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addgroup_start_parenthesis"
            android:fontFamily="@font/nanumsquareneo_regular"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/tv_group_total"
            app:layout_constraintTop_toTopOf="@id/iv_group_total"
            app:layout_constraintBottom_toBottomOf="@id/iv_group_total"/>

        <TextView
            android:id="@+id/tv_groupperson_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addgroup_groupperson"
            android:fontFamily="@font/nanumsquareneo_regular"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_start_parenthesis_total"
            app:layout_constraintTop_toTopOf="@id/iv_group_total"
            app:layout_constraintBottom_toBottomOf="@id/iv_group_total"/>

        <TextView
            android:id="@+id/tv_end_parenthesis_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addgroup_end_parenthesis"
            android:fontFamily="@font/nanumsquareneo_regular"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_groupperson_total"
            app:layout_constraintTop_toTopOf="@id/iv_group_total"
            app:layout_constraintBottom_toBottomOf="@id/iv_group_total"/>

        <LinearLayout
            android:id="@+id/ll_grouplist_total"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/iv_group_total"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/line"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_addgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:overScrollMode="never"
        tools:listitem="@layout/item_group_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_addgroup"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_addgroup"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/addgroup_btn"
        android:textColor="@color/white"
        android:fontFamily="@font/nanumsquareneo_bold"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/fragment_add_bottom_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_addgroup"/>


</androidx.constraintlayout.widget.ConstraintLayout>